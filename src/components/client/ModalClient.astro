---
import { Icon } from "astro-icon/components";
---

<!-- Modal de formulario (blur con floating labels) -->
<div
    id="modal-cliente"
    class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-50"
>
    <div
        class="bg-white dark:bg-neutral-900 rounded-2xl shadow-xl w-full max-w-md p-6 relative"
    >
        <div class="flex items-center gap-2 pb-8">
            <Icon
                name="form/clientedit"
                size={22}
                class="text-green-600 dark:text-green-400"
            />
            <h2
                id="titulo-modal-cliente"
                class="text-lg font-semibold dark:text-white"
            >
                Registrar cliente
            </h2>
        </div>

        <form id="form-cliente" class="space-y-9">
            <input type="hidden" id="cliente-id" />

            <!-- Nombre -->
            <div class="relative">
                <input
                    id="cliente-nombre"
                    type="text"
                    required
                    placeholder=" "
                    class="peer w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white dark:border-neutral-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
                <label
                    for="cliente-nombre"
                    class="absolute left-3 -top-2.5 text-xs text-gray-500 dark:text-gray-400 bg-white dark:bg-neutral-900 px-1 transition-all
                 peer-placeholder-shown:top-2 peer-placeholder-shown:text-sm peer-placeholder-shown:text-gray-400
                 peer-focus:-top-2.5 peer-focus:text-xs peer-focus:text-blue-500"
                >
                    Nombre
                </label>
            </div>

            <!-- Documento -->
            <div class="relative">
                <input
                    id="cliente-documento"
                    type="text"
                    required
                    placeholder=" "
                    class="peer w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white dark:border-neutral-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
                <label
                    for="cliente-documento"
                    class="absolute left-3 -top-2.5 text-xs text-gray-500 dark:text-gray-400 bg-white dark:bg-neutral-900 px-1 transition-all
                 peer-placeholder-shown:top-2 peer-placeholder-shown:text-sm peer-placeholder-shown:text-gray-400
                 peer-focus:-top-2.5 peer-focus:text-xs peer-focus:text-blue-500"
                >
                    Documento
                </label>
            </div>

            <!-- Teléfono -->
            <div class="relative">
                <input
                    id="cliente-telefono"
                    type="text"
                    placeholder=" "
                    class="peer w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white dark:border-neutral-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
                <label
                    for="cliente-telefono"
                    class="absolute left-3 -top-2.5 text-xs text-gray-500 dark:text-gray-400 bg-white dark:bg-neutral-900 px-1 transition-all
                 peer-placeholder-shown:top-2 peer-placeholder-shown:text-sm peer-placeholder-shown:text-gray-400
                 peer-focus:-top-2.5 peer-focus:text-xs peer-focus:text-blue-500"
                >
                    Teléfono
                </label>
            </div>

            <!-- Email -->
            <div class="relative">
                <input
                    id="cliente-email"
                    type="email"
                    placeholder=" "
                    class="peer w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white dark:border-neutral-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
                <label
                    for="cliente-email"
                    class="absolute left-3 -top-2.5 text-xs text-gray-500 dark:text-gray-400 bg-white dark:bg-neutral-900 px-1 transition-all
                 peer-placeholder-shown:top-2 peer-placeholder-shown:text-sm peer-placeholder-shown:text-gray-400
                 peer-focus:-top-2.5 peer-focus:text-xs peer-focus:text-blue-500"
                >
                    Email
                </label>
            </div>

            <!-- Dirección -->
            <div class="relative">
                <input
                    id="cliente-direccion"
                    type="text"
                    placeholder=" "
                    class="peer w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white dark:border-neutral-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
                <label
                    for="cliente-direccion"
                    class="absolute left-3 -top-2.5 text-xs text-gray-500 dark:text-gray-400 bg-white dark:bg-neutral-900 px-1 transition-all
                 peer-placeholder-shown:top-2 peer-placeholder-shown:text-sm peer-placeholder-shown:text-gray-400
                 peer-focus:-top-2.5 peer-focus:text-xs peer-focus:text-blue-500"
                >
                    Dirección
                </label>
            </div>

            <div class="flex justify-end gap-2 mt-4">
                <button
                    type="button"
                    id="cerrar-modal-cliente"
                    class="px-4 py-2 bg-black flex items-center gap-2 text-white rounded-lg hover:bg-gray-600"
                >
                    <Icon
                        name="nav/close"
                        size={18}
                        class="text-red-600 dark:text-red-400"
                    />
                    Cancelar
                </button>
                <button
                    type="submit"
                    class="px-4 py-2 bg-blue-600 flex items-center gap-2 text-white rounded-lg hover:bg-blue-700"
                >
                    <Icon name="form/save" size={18} />
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Modal de confirmación (blur) -->
<div
    id="modal-eliminar-cliente"
    class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-50"
>
    <div
        class="bg-white dark:bg-neutral-900 rounded-2xl shadow-xl w-full max-w-sm p-6 text-center"
    >
        <h2 class="text-lg font-bold mb-4 text-gray-800 dark:text-white">
            Confirmar eliminación
        </h2>
        <p class="text-gray-700 dark:text-gray-200 mb-4">
            ¿Seguro que deseas eliminar este cliente?
        </p>
        <div class="flex justify-center gap-4">
            <button
                id="cancelar-eliminar-cliente"
                class="px-4 py-2 bg-black flex items-center gap-2 text-white rounded-lg hover:bg-gray-700"
            >
                <Icon
                    name="nav/close"
                    size={18}
                    class="text-red-600 dark:text-red-400"
                />
                Cancelar
            </button>
            <button
                id="confirmar-eliminar-cliente"
                class="px-4 py-2 bg-red-600 flex items-center gap-2 text-white rounded-lg hover:bg-red-700"
            >
                <Icon name="form/trash" size={18} class="text-white" />
                Eliminar
            </button>
        </div>
    </div>
</div>