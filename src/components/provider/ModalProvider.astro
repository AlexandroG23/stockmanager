---
import { Icon } from "astro-icon/components";
---

<!-- Modal de formulario -->
<div
    id="modal-proveedor"
    class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm hidden justify-center items-center z-50"
>
    <div
        class="bg-white dark:bg-neutral-900 rounded-lg shadow-lg w-full max-w-md p-6"
    >
        <h2 class="text-lg font-semibold mb-4 dark:text-white">
            Registrar proveedor
        </h2>
        <form id="form-proveedor" class="space-y-4">
            <input type="hidden" id="proveedor-id" />
            <div>
                <label class="block text-sm font-medium">Nombre</label>
                <input
                    id="proveedor-nombre"
                    type="text"
                    required
                    class="w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white dark:border-neutral-700"
                />
            </div>
            <div>
                <label class="block text-sm font-medium">RUC</label>
                <input
                    id="proveedor-ruc"
                    type="text"
                    required
                    maxlength="11"
                    class="w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white dark:border-neutral-700"
                />
            </div>
            <div>
                <label class="block text-sm font-medium">Teléfono</label>
                <input
                    id="proveedor-telefono"
                    type="text"
                    class="w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white dark:border-neutral-700"
                />
            </div>
            <div>
                <label class="block text-sm font-medium">Email</label>
                <input
                    id="proveedor-email"
                    type="email"
                    class="w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white dark:border-neutral-700"
                />
            </div>
            <div>
                <label class="block text-sm font-medium">Dirección</label>
                <input
                    id="proveedor-direccion"
                    type="text"
                    class="w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white dark:border-neutral-700"
                />
            </div>
            <div class="flex justify-end gap-2 mt-4">
                <button
                    type="button"
                    id="cerrar-modal-proveedor"
                    class="px-4 py-2 bg-gray-400 text-white rounded-lg hover:bg-gray-500"
                >
                    Cancelar
                </button>
                <button
                    type="submit"
                    class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
                >
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Modal confirmación -->
<div
    id="modal-eliminar-proveedor"
    class="fixed inset-0 bg-opacity-50 backdrop-blur-sm hidden justify-center items-center z-50"
>
    <div
        class="bg-white dark:bg-neutral-900 rounded-lg shadow-lg w-full max-w-sm p-6 text-center"
    >
        <h2 class="text-lg font-bold mb-4 text-gray-800 dark:text-white">
            Confirmar eliminación
        </h2>
        <p class="text-gray-700 dark:text-gray-200 mb-4">
            ¿Seguro que deseas eliminar este proveedor?
        </p>
        <div class="flex justify-center gap-4">
            <button
                id="cancelar-eliminar-proveedor"
                class="px-4 py-2 flex gap-2 items-center bg-gray-400 text-white rounded-lg hover:bg-gray-500"
            >
                <Icon name="nav/close" size={20} />
                Cancelar
            </button>
            <button
                id="confirmar-eliminar-proveedor"
                class="px-4 py-2 flex gap-2 items-center bg-red-600 text-white rounded-lg hover:bg-red-700"
            >
                <Icon name="form/trash" size={20} />
                Eliminar
            </button>
        </div>
    </div>
</div>
