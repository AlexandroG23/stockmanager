---
import { Icon } from "astro-icon/components";
---

<!-- Modal de formulario de producto (floating labels + blur) -->
<div
    id="modal-producto"
    class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-50"
>
    <div
        class="bg-white dark:bg-neutral-900 rounded-2xl shadow-xl w-full max-w-md p-6 relative"
    >
        <!-- Título -->
        <h2
            id="titulo-modal-producto"
            class="text-lg font-semibold mb-6 dark:text-white flex items-center gap-2 pb-4"
        >
            <Icon name="form/plusproduct" size={22} class="text-blue-600 dark:text-blue-400" />
            Registrar producto
        </h2>

        <form id="form-producto" class="space-y-9">
            <input type="hidden" id="producto-id" />

            <!-- Código de barras -->
            <div class="relative">
                <input
                    id="producto-codigo"
                    type="text"
                    placeholder=" "
                    class="peer w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white 
                           dark:border-neutral-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
                <label
                    for="producto-codigo"
                    class="absolute left-3 -top-2.5 text-xs text-gray-500 dark:text-gray-400 
                           bg-white dark:bg-neutral-900 px-1 transition-all
                           peer-placeholder-shown:top-2 peer-placeholder-shown:text-sm peer-placeholder-shown:text-gray-400
                           peer-focus:-top-2.5 peer-focus:text-xs peer-focus:text-blue-500"
                >
                    Código de barras
                </label>
            </div>

            <!-- Nombre -->
            <div class="relative">
                <input
                    id="producto-nombre"
                    type="text"
                    required
                    placeholder=" "
                    class="peer w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white 
                           dark:border-neutral-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
                <label
                    for="producto-nombre"
                    class="absolute left-3 -top-2.5 text-xs text-gray-500 dark:text-gray-400 
                           bg-white dark:bg-neutral-900 px-1 transition-all
                           peer-placeholder-shown:top-2 peer-placeholder-shown:text-sm peer-placeholder-shown:text-gray-400
                           peer-focus:-top-2.5 peer-focus:text-xs peer-focus:text-blue-500"
                >
                    Nombre
                </label>
            </div>

            <!-- Precios -->
            <div class="grid grid-cols-2 gap-4">
                <div class="relative">
                    <input
                        id="producto-precio-compra"
                        type="number"
                        step="0.01"
                        required
                        placeholder=" "
                        class="peer w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white 
                               dark:border-neutral-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    />
                    <label
                        for="producto-precio-compra"
                        class="absolute left-3 -top-2.5 text-xs text-gray-500 dark:text-gray-400 
                               bg-white dark:bg-neutral-900 px-1 transition-all
                               peer-placeholder-shown:top-2 peer-placeholder-shown:text-sm peer-placeholder-shown:text-gray-400
                               peer-focus:-top-2.5 peer-focus:text-xs peer-focus:text-blue-500"
                    >
                        Precio compra
                    </label>
                </div>

                <div class="relative">
                    <input
                        id="producto-precio-venta"
                        type="number"
                        step="0.01"
                        required
                        placeholder=" "
                        class="peer w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white 
                               dark:border-neutral-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    />
                    <label
                        for="producto-precio-venta"
                        class="absolute left-3 -top-2.5 text-xs text-gray-500 dark:text-gray-400 
                               bg-white dark:bg-neutral-900 px-1 transition-all
                               peer-placeholder-shown:top-2 peer-placeholder-shown:text-sm peer-placeholder-shown:text-gray-400
                               peer-focus:-top-2.5 peer-focus:text-xs peer-focus:text-blue-500"
                    >
                        Precio venta
                    </label>
                </div>
            </div>

            <!-- Stocks -->
            <div class="grid grid-cols-2 gap-4">
                <div class="relative">
                    <input
                        id="producto-stock-actual"
                        type="number"
                        required
                        placeholder=" "
                        class="peer w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white 
                               dark:border-neutral-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    />
                    <label
                        for="producto-stock-actual"
                        class="absolute left-3 -top-2.5 text-xs text-gray-500 dark:text-gray-400 
                               bg-white dark:bg-neutral-900 px-1 transition-all
                               peer-placeholder-shown:top-2 peer-placeholder-shown:text-sm peer-placeholder-shown:text-gray-400
                               peer-focus:-top-2.5 peer-focus:text-xs peer-focus:text-blue-500"
                    >
                        Stock actual
                    </label>
                </div>

                <div class="relative">
                    <input
                        id="producto-stock-minimo"
                        type="number"
                        required
                        placeholder=" "
                        class="peer w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white 
                               dark:border-neutral-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    />
                    <label
                        for="producto-stock-minimo"
                        class="absolute left-3 -top-2.5 text-xs text-gray-500 dark:text-gray-400 
                               bg-white dark:bg-neutral-900 px-1 transition-all
                               peer-placeholder-shown:top-2 peer-placeholder-shown:text-sm peer-placeholder-shown:text-gray-400
                               peer-focus:-top-2.5 peer-focus:text-xs peer-focus:text-blue-500"
                    >
                        Stock mínimo
                    </label>
                </div>
            </div>

            <!-- Unidad -->
            <div class="relative">
                <input
                    id="producto-unidad"
                    type="text"
                    required
                    placeholder=" "
                    class="peer w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white 
                           dark:border-neutral-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                />
                <label
                    for="producto-unidad"
                    class="absolute left-3 -top-2.5 text-xs text-gray-500 dark:text-gray-400 
                           bg-white dark:bg-neutral-900 px-1 transition-all
                           peer-placeholder-shown:top-2 peer-placeholder-shown:text-sm peer-placeholder-shown:text-gray-400
                           peer-focus:-top-2.5 peer-focus:text-xs peer-focus:text-blue-500"
                >
                    Unidad de medida
                </label>
            </div>

            <!-- Categoría -->
            <div class="relative">
                <select
                    id="producto-categoria"
                    required
                    class="peer w-full p-2 border rounded-lg dark:bg-neutral-800 dark:text-white 
                           dark:border-neutral-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                >
                    <option value="" disabled selected hidden></option>
                </select>
                <label
                    for="producto-categoria"
                    class="absolute left-3 -top-2.5 text-xs text-gray-500 dark:text-gray-400 
                           bg-white dark:bg-neutral-900 px-1 transition-all
                           peer-placeholder-shown:top-2 peer-placeholder-shown:text-sm peer-placeholder-shown:text-gray-400
                           peer-focus:-top-2.5 peer-focus:text-xs peer-focus:text-blue-500"
                >
                    Categoría
                </label>
            </div>

            <!-- Botones -->
            <div class="flex justify-end gap-2 mt-4">
                <button
                    type="button"
                    id="cerrar-modal"
                    class="px-4 py-2 flex gap-2 items-center bg-black dark:bg-gray-700 text-gray-300 dark:text-gray-400 hover:bg-gray-600 dark:hover:bg-gray-600 rounded-lg"
                >
                    <Icon name="nav/close" size={20} class="text-red-600 dark:text-red-400"/>
                    Cancelar
                </button>
                <button
                    type="submit"
                    class="px-4 py-2 flex gap-2 items-center bg-blue-600 text-white rounded-lg hover:bg-blue-700"
                >
                    <Icon name="form/save" size={20} />
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>
